<%= form_for @post do |f| %>
  <div class="form-group">
      <label>Title</label>
       <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label>Content</label>
    <%= f.text_area :content, class: 'form-control', rows: '8' %>
  </div>
  <div class="form-group">
    <label>Content</label>
    <%= f.collection_select(
        :category_id,
        @categories,
        :id,
        :name,
        {},
        class: 'form-control'
      )
    %>
  </div>
  <div class="form-group">
    <label>User Name</label>
    <%= f.collection_select(
        :user_id,
        @users,
        :id,
        :username,
        {}, 
        class: 'form-control'
      )
    %>
  </div>
  <div>
    <%= f.submit class: 'btn btn-success btn-sm mt-2' %>
  </div>
<% end %>
