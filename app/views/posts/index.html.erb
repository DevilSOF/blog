<br>
<p class="text-center font-weight-bold">All Posts</p>
<p><%= link_to "New Post", new_post_path, class: 'btn btn-primary btn-sm' %></p>
<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Username</th>
      <th>Category</th>
    </tr>
  </thead>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= link_to post.content, post %></td>
      <td><%= link_to post.user.username, post %></td>
      <td><%= post.category.name %></td>
    </tr>
  <% end %>
</table>
