<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light", style="background-color: #e3f2fd;">
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
              <%= link_to 'Home', root_path, class: 'navbar-brand' %>
          </li>
        </ul>
        <% if !user_signed_in? %>
          <%= link_to 'Sign in', new_user_session_path, class: 'btn btn-info' %>
        <% end %>
        <% if user_signed_in? %>
          <%= link_to current_user.email, edit_user_registration_path, class: 'btn btn-info mr-2' %>
          <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'btn btn-info' %>
        <% end %>
      </div>
    </nav>
    <% if notice %>
      <nav class="navbar navbar-light", style="background-color: #5dc6a7;">
        <div class="mx-auto">
          <p><%= notice %></p
        </div>
      </nav>
    <% end %>
    <% if alert %>
      <nav class="navbar navbar-light", style="background-color: #5dc6a7;">
        <div class="mx-auto">
          <p>You need to sign in or sign up before continuing.</p>
        </div>
      </nav>
    <% end %>
    <div class="container">
      <%= yield %>
    </div>
  </body>
  </div>
</html>
